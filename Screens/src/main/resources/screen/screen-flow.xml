<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/webflow http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd"
	parent="crud-flow">

    
	<var name="controller" 			class="ar.com.larreta.screens.controllers.ScreensControllerImpl" />
	<var name="dataView" 			class="ar.com.larreta.commons.views.DataView" />
	
	<on-start>
        <set name="controller.dataView" value="dataView" />
    </on-start>
	
	<action-state id="starting" parent="crud-flow#starting"/>
	<view-state id="start"  	parent="crud-flow#start"  		view="screen.xhtml"/>
	<view-state id="updateView" parent="crud-flow#updateView" 	view="screen.xhtml" />
	<view-state id="createView" parent="crud-flow#createView" 	view="screen.xhtml" />

</flow>